{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "lib": ["es6", "dom"],
    "types": ["node"]
  },
  "include": ["src/lib/*.ts"],
  "exclude": ["node_modules"],
  "paths": {
    "react": ["node_modules/@types/react/index"],
    "react-dom": ["node_modules/@types/react-dom/index"]
  }
}
